{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "noEmit": false,
        "paths": {
            "@scripts/*": ["src/scripts/*"],
            "@hooks/*": ["src/scripts/hooks/*"],
            "@customTypes/*": ["src/types/*"],
            "@api/*": ["src/api/*"]
        }
    },
    "include": [
        "./index.ts",
        "server-api"
    ],
    "exclude": [
        "node_modules"
    ]
}
